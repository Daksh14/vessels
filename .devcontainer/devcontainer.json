{
	"dockerFile": "Dockerfile",
	"extensions": [
		"rust-lang.rust",
		"bungcip.better-toml",
		"vadimcn.vscode-lldb",
	],
	"runArgs": [
		"--shm-size=128MB",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"settings": {
		"terminal.integrated.shell.linux": "/bin/zsh",
		"editor.formatOnSave": true,
		"rust.clippy_preference": "on",
	}
}